@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer _localizer;
@model ProfileInputViewModel
@{
    ViewData["Title"] = "Edit Profile";
}
<div class="container">

    <div class="d-flex justify-content-start">
            <div class="side-panel">
                <div>
                    <a href="">@_localizer["Edit"]</a>
                </div>
                <div>
                    <a href="">@_localizer["Articles"]</a>
                </div>
                <div>
                    <a href="">@_localizer["Liked"]</a>
                </div>
                <div>
                    <a href="">@_localizer["Saved"]</a>
                </div>
                <div>
                    <a href="">@_localizer["Wallet"]</a>
                </div>
                <div>
                    <button>
                        @_localizer["Exit"]
                    </button>
                </div>
            </div>
        <div class="profile">
            <form>
                <div>
                    <h1>Profile editing</h1>
                    <div class="d-flex justify-content-between">
                        <div class="author-article d-flex justify-content-start align-items-center">
                            <img class="d-block" src="@Model.Photo" alt="avatar">
                            <input type="text" value="@Model.Name @Model.Surname" />
                        </div>

                    </div>
                </div>
                <div>

                    <input value="@Model.Description" />
                    <input value="@Model.Password" />
                </div>
                <div>
                    <button type="submit">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
